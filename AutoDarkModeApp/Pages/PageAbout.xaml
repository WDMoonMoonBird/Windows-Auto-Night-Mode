                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="0,35,0,0"
                    Orientation="Vertical">



            <uc:Card Padding="30,15,15,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="7*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <ui:FontIcon Grid.Column="0"
                                 Grid.Row="0"
                                 VerticalAlignment="Center"
                                 Margin="-15,2,15,0"
                                 FontFamily="Segoe MDL2 Assets"
                                 Glyph="&#xe946;" />

                    <TextBlock Margin="0,0,0,0"
                               Text="Version"
                               Grid.Row="0"
                               VerticalAlignment="Center"
                               Grid.Column="1"
                               FontFamily="Segoe UI Semibold"
                               FontSize="14" />

                    <TextBlock FontSize="14"
                               Margin="0,0,15,0"
                               Grid.Row="0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               Grid.Column="2"
                               TextWrapping="Wrap"
                               Name="TextBlockCopyInfo" />

                    <Button Name="ButtonCopyVersionInfo"
                            Margin="0,0,0,0"
                            Grid.Column="3"
                            VerticalAlignment="Center"
                            Grid.Row="0"
                            MinWidth="80"
                            Click="ButtonCopyVersionInfo_Click"
                            Content="{x:Static p:Resources.AboutButtonCopy}" />

                    <Separator Margin="-30,15,-15,0"
                               Grid.Row="1"
                               Grid.ColumnSpan="4"
                               Background="{DynamicResource Win11Border}" />

                    <Grid Grid.Row="2"
                          Grid.ColumnSpan="2"
                          Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />

                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Commit Hash-->
                        <TextBlock Grid.Column="0"
                                   Grid.Row="0"
                                   Text="Commit"
                                   Margin="0,15,0,0"
                                   FontSize="14" />
                        <TextBlock Grid.Column="1"
                                   Grid.Row="0"
                                   Name="TextBlockCommitHash"
                                   Margin="20,15,0,0"
                                   FontSize="14" />

                        <!-- Service Version -->
                        <TextBlock Grid.Column="0"
                                   Grid.Row="1"
                                   Text="App/Service"
                                   Margin="0,5,0,0"
                                   FontSize="14"
                                   FontWeight="SemiBold" />
                        <TextBlock Grid.Column="1"
                                   Grid.Row="1"
                                   Name="TextBlockSvcVersion"
                                   Margin="20,5,0,0"
                                   FontSize="14"
                                   FontWeight="SemiBold" />

                        <!-- Updater Version -->
                        <TextBlock Grid.Column="0"
                                   Grid.Row="2"
                                   Text="Updater"
                                   Margin="0,5,0,0"
                                   FontSize="14" />
                        <TextBlock Grid.Column="1"
                                   Grid.Row="2"
                                   Name="TextBlockUpdaterVersion"
                                   Margin="20,5,0,0"
                                   FontSize="14" />


                        <!-- Shell Version -->
                        <TextBlock Grid.Column="0"
                                   Grid.Row="3"
                                   Text="Shell"
                                   Margin="0,5,0,0"
                                   FontSize="14" />
                        <TextBlock Grid.Column="1"
                                   Grid.Row="3"
                                   Name="TextBlockShellVersion"
                                   Margin="20,5,0,0"
                                   FontSize="14" />

                        <!-- Net Core Version -->
                        <TextBlock Grid.Column="0"
                                   Grid.Row="4"
                                   Text=".Net"
                                   Margin="0,5,0,0"
                                   FontSize="14" />
                        <TextBlock Grid.Column="1"
                                   Grid.Row="4"
                                   Name="TextBlockNetCoreVersion"
                                   Margin="20,5,0,0"
                                   FontSize="14" />

                        <!-- Windows Version -->
                        <TextBlock Grid.Column="0"
                                   Grid.Row="5"
                                   Text="Windows"
                                   Margin="0,5,0,0"
                                   FontSize="14" />
                        <TextBlock Grid.Column="1"
                                   Grid.Row="5"
                                   Name="TextBlockWindowsVersion"
                                   Margin="20,5,0,0"
                                   FontSize="14" />

                        <!-- Architecture -->
                        <TextBlock Grid.Column="0"
                                   Grid.Row="6"
                                   Text="Arch"
                                   Margin="0,5,0,0"
                                   FontSize="14" />
                        <TextBlock Grid.Column="1"
                                   Grid.Row="6"
                                   Name="TextBlockArch"
                                   Margin="20,5,0,0"
                                   FontSize="14" />

                    </Grid>
                </Grid>

