      xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
      xmlns:uc="clr-namespace:AutoDarkModeApp.Controls"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      x:Class="AutoDarkModeApp.Pages.PageAbout"
